%nav.navbar.navbar-default
  .navbar-container
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle Navigation
        %span.icon-bar
        %span.icon-bar
      .navbar-brand= link_to "AnxietyGram", root_path
    .collapse.navbar-collapse#bs-navbar-collapse-1
      %ul.nav.navbar-nav.navbar-right
        %li= link_to 'Images', images_path
        - if logged_in?
          %li= link_to 'Submit Image', new_image_path
          %li= link_to 'My Profile', profile_path(current_user.username)
          %li= link_to 'Logout', logout_path
        - else
          %li= link_to 'Login', login_path
          %li= link_to 'Register', new_user_path