%li.list-group-item
  - if notification.read == nil
    = link_to "#{notification.notified_by.username} has #{notification.notify_type}ed on your post #{from_time(notification.created_at)} ago", link_through_path(notification)
  - else
    = link_to "#{notification.notified_by.username} has #{notification.notify_type}ed on your post #{from_time(notification.created_at)} ago", link_through_path(notification), class: 'notification-read'